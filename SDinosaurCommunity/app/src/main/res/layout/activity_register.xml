<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f7f8">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:src="@drawable/dino" />

    <TextView
        android:id="@+id/register_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="注册"
        android:textColor="#88dab9"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/Lr_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/register_text1"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <EditText
            android:id="@+id/login_username"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn3"
            android:textSize="16sp"
            android:paddingLeft="18dp"
            android:textColor="@color/black"
            android:hint="Username"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lr_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Lr_1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <EditText
            android:id="@+id/login_password"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:hint="Password"
            android:paddingLeft="18dp"
            android:background="@drawable/bg_btn3"
            android:inputType="textPassword"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lr_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Lr_2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <EditText
            android:id="@+id/login_ConfirmPassword"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:hint="Confirm Your Password"
            android:paddingLeft="18dp"
            android:background="@drawable/bg_btn3"
            android:inputType="textPassword"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lr_3"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@+id/Lr_3">

        <CheckBox
            android:id="@+id/rb_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="已认真阅读使用协议"
            android:textSize="12sp"
            android:textColor="#0000ff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lr_3"
        android:layout_marginTop="45dp">
        <Button
            android:id="@+id/Register_btn1"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn4"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="返回"
            android:gravity="center" />
        <Button
            android:id="@+id/Register_btn2"
            android:layout_marginRight="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn4"
            android:text="提交"
            android:gravity="center"
            android:layout_marginLeft="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="Henu出版社"
        android:textColor="#000000"
        android:textSize="14sp" />

</RelativeLayout>