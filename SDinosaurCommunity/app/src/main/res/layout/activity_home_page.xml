<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#e6e6e6">

    <TextView
        android:id="@+id/HomePageText_1"
        android:layout_marginTop="95dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小恐龙社区欢迎你"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/HomePageImg"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_below="@+id/HomePageText_1"
        android:src="@drawable/ksks" />

    <TextView
        android:id="@+id/HomePageText_2"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_below="@id/HomePageImg"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#03542d"
        android:textStyle="bold"
        android:text="这里是一个充满欢乐的社区！"/>

    <Button
        android:id="@+id/HomePageBtn"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/HomePageText_2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:background="@drawable/bg_btn5"
        android:text="进入社区" />
</RelativeLayout>